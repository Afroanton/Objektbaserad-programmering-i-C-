#include <iostream>
#include <string>
using namespace std;

int main()
{
	string val;
	int *pointer;
	while (true)
	{
		cout << "[1] Allokera 1GiB" << endl;
		cout << "[2] Allokera 1KiB" << endl;
		cout << "[3] Allokera 1GiB i loop" << endl;
		cout << "[4] Allokera 1KiB i loop" << endl;
		getline(cin, val);

		if (val == "1")
		{
			pointer = new int[268435456];
		}
		if (val == "2")
		{
			pointer = new int[256];
		}
		if (val == "3")
		{
			while (true)
			{
				try {
					pointer = new int[268435456];
				}
				catch (std::bad_alloc e) {
					cerr << e.what() << endl; // K รถ rs denna rad ?
				}
			}
		}
		if (val == "4")
		{
			while (true)
			{
				try {
					pointer = new int[256];
				}
				catch (std::bad_alloc e) {
					cerr << e.what() << endl; // K รถ rs denna rad ?
				}
				
			}

		}
		

		return 0;
	}
	
}
